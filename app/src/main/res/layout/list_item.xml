<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="country"
            type="com.carlosjimz87.funwithflags.network.models.Country" />
    </data>

    <RelativeLayout
        android:id="@+id/country_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_shape"
        tools:ignore="RtlSymmetry">

        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:padding="2dp">

            <ImageView
                android:id="@+id/flag_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/broken_image"
                app:imageUrl="@{country.flag}"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/overlay_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:src="@drawable/triangle_vector"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <TextView
            android:id="@+id/country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/bebasneue"
            android:gravity="center_vertical"
            android:maxEms="20"
            android:minEms="3"
            android:minLines="2"
            android:singleLine="false"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/black"
            android:textSize="30sp"
            tools:ignore="RelativeOverlap"
            tools:text="UNITED STATES\n MINOR OUTLYING ISLANDS" />

    </RelativeLayout>
</layout>
